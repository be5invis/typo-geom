{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"option": "watch",
			"label": "TSC - Watch",
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared"
			},

			"problemMatcher": {
				"base": "$tsc-watch",
				"owner": "typescript-strict-null",
				"applyTo": "allDocuments"
			},

			"isBackground": true,
			"runOptions": {
				"runOn": "folderOpen"
			}
		}
	]
}
